/**index.wxss**/
/* 页面背景色 */
page{
  background-color: #fafafa;
}
/* 搜索栏 */
.search{
  width: 700rpx;
  height: 70rpx;
  margin: 20rpx auto;
  font-size: 26rpx;
  color: #ccc;
  background-color: white;
  border-radius: 15px;
  overflow: hidden;
}
/* 搜索栏跳转 */
.search>navigator{
  width: 700rpx;
  height: 70rpx;
}
.search>navigator>text{
  width: 60rpx;
  height: 70rpx;
  margin:17rpx auto 0;
  display: block;
}
/* 推荐歌曲 */
.tuiJian{
  width: 700rpx;
  height: 1000rpx;
  margin: 80rpx auto 0;
  /* background-color: orange; */
}
/* 推荐歌曲上文字样式 */
.tuiJian>.tuiJianTop{
  width: 700rpx;
  height: 40rpx;
  font-weight: bold;
  /* background-color: yellow; */
  display: flex;
  justify-content: space-between;
}
.tuiJian>.tuiJianTop>navigator>text{
  font-size: 26rpx;
  color: #ccc;
}
/* 推荐歌曲下列表大小 */
.tuiJian>.tuiJianBtn{
  width: 700rpx;
  height: 890rpx;
  margin-top: 30rpx;
  /* background-color: yellowgreen; */
}
/* 列表单大小样式 */
.tuiJian>.tuiJianBtn>.musicTuiList{
  width: 700rpx;
  height: 140rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  /* background-color: red; */
}
/* 歌曲文字 */
.tuiJian>.tuiJianBtn>.musicTuiList>.musicName{
  width: 500rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background-color: aqua; */
}
.tuiJian>.tuiJianBtn>.musicTuiList>.musicName>text:first-child{
  font-size: 30rpx;
  margin-top: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tuiJian>.tuiJianBtn>.musicTuiList>.musicName>text:last-child{
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 25rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.tuiJian>.tuiJianBtn>.musicTuiList>text{
  margin-top: 55rpx;
}
/* 歌曲图片 */
.tuiJian>.tuiJianBtn>.musicTuiList>image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 5px;
}
/* 热门歌曲上大小样式 */
.rmgd>.rmgdTop{
  width: 700rpx;
  height: 40rpx;
  margin:0 auto;
  font-weight: bold;
  /* background-color: yellow; */
  display: flex;
  justify-content: space-between;
}
.rmgd>.rmgdTop>navigator>text{
  font-size: 26rpx;
