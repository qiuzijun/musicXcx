}
/* 歌单滚动区域*/
scroll-view{
  width: 100%;
  height: 300rpx;
  margin-top: 30rpx;
  white-space: nowrap;
}
.scroll-item-x{
  width: 220rpx;
  height: 300rpx;
  margin-left: 28rpx;
  /* background-color: indianred; */
  display: inline-block;
}
.scroll-item-x>image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 10px;
}
.scroll-item-x>.hot{
  font-size: 20rpx;
  color: #ccc;
  margin-left: -200rpx;
  margin-top: -10rpx;
}
.scroll-item-x>.name{
  font-size: 26rpx;
  margin-top: 20rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
